        <ComboBox x:Name="cbBox" HorizontalAlignment="Left" Height="27" Margin="10,47,0,0" VerticalAlignment="Top" Width="152" SelectionChanged="cbBox_SelectionChanged"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="153" Margin="57,142,0,0" Stroke="Black" VerticalAlignment="Top" Width="398"/>
        <Label x:Name="lblNombre" Content="Nombre" HorizontalAlignment="Left" Margin="68,159,0,0" VerticalAlignment="Top" Height="101" Width="175" FontSize="20"/>
        <Label x:Name="lblApellido" Content="Apellido" HorizontalAlignment="Left" Margin="248,159,0,0" VerticalAlignment="Top" Height="101" Width="166" FontSize="18"/>

    </Grid>
</Window>
